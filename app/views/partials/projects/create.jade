div(ng-include='\'partials/navbar.html\'')
.row
    form(name="create-project",method="POST",class="form-horizontal", data-ng-submit="create()")
        .form-group
            label(for="groupName") Group Name
            input(type="text", class="form-control", id="groupName",placeholder="Enter Group Name", data-ng-model="name", required)
        .form-group
            label(for="github") GitHub
            input(type="text", class="form-control", id="github",placeholder="Enter GitHub URL", data-ng-model="github", required)
        .form-group
            label(for="groupMemberOne") Group Member One
            input(type="text", class="form-control", id="groupMemberOne",placeholder="Group Member #1", data-ng-model="memberOne", required)
        .form-group
            label(for="groupMemberTwo") Group Member Two
            input(type="text", class="form-control", id="groupMemberTwo",placeholder="Group Member #2", data-ng-model="memberTwo", required)
        .form-group
            label(for="groupMemberThree") Group Member Three
            input(type="text", class="form-control", id="groupMemberThree",placeholder="Group Member #3", data-ng-model="memberThree", required)
        .form-group
            button(type="submit", class="btn btn-default") Submit